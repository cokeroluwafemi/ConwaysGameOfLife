<div id="controlpanel">
  <ul>
    <li><h1>Conway's Game of Life</h1></li>
    <li><input id="conway_running" type="button" value="RUN"/></li>
    <li><input id="conway_edges" type="button" value="EDGES ON"></li>
    <li><input id="conway_clear" type="button" value="CLEAR GRID"/></li>
    <li><input id="conway_single" type="button" class="active-button" value="SINGLE CELL"/></li>
    <li><input id="conway_pattern" type="button" value="PATTERNS" /></li>
    <li><span id="selected-pattern"></span></li>
    <li id="debug"></li>
  </ul>
  <p class="twitter-handle"><a href="http://twitter.com/stevenklise">@stevenklise</a></p>
</div>

<div id="patternselect">
  <h2>Categories</h2>
  <ul id="categories">
    <% @allcategories.each do |category| %>
    <li id="<%= category.name %>">
      <a href="#<%= category.name %>"><%= category.name.capitalize %><span class="down-arrow">â–¾</span></a>
      <ul id="<%= category.name %>-patterns" class="pattern-list">
        <% category.patterns.each do |pattern| %>
        <li class="pattern" id="<%= category.name %>-<%= pattern.id %>">
          <%= pattern.draw %> <%= pattern.name %>
        </li>
        <% end %>
      </ul>
    </li>
    <% end %>
  </ul>
</div>

<script src="/js/processing-1.2.3.min.js"></script>
<canvas datasrc="/js/conways.pde"></canvas>